{
	"expo": {
		"name": "Smart Home",
		"slug": "home-help-tracker",
		"version": "1.0.0",
		"orientation": "default",
		"icon": "./assets/images/icon.png",
		"scheme": "homehelptracker",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true,
			"icon": "./assets/images/icon.png", // ✅ iOS icon
			"bundleIdentifier": "com.pranjalexpo.homehelptracker"
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"edgeToEdgeEnabled": true,
			"package": "com.pranjalexpo.homehelptracker"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/splash-icon.png", // ✅ splash image
					"imageWidth": 200,
					"resizeMode": "contain", // "cover" if fullscreen
					"backgroundColor": "#ffffff"
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		},
		"extra": {
			"router": {},
			"eas": {
				"projectId": "dd52b8a8-c8be-467f-9919-580debcb62bf"
			}
		},
		"runtimeVersion": {
			"policy": "appVersion"
		},
		"updates": {
			"url": "https://u.expo.dev/dd52b8a8-c8be-467f-9919-580debcb62bf"
		}
	}
}
